{
	"name": "Ruby NLS BARD",
	"dockerComposeFile": [
		"../docker-compose.yml",
		"docker-compose.yml"
	],
	"service": "app",
	"workspaceFolder": "/app",
	"features": {
		"ghcr.io/devcontainers/features/git:1": {}
	},
	"containerEnv": {
		"HOST_UID": "${localEnv:UID}",
		"HOST_GID": "${localEnv:GID}"
	},
	"forwardPorts": [3000],
	"runArgs": [
		"--build-arg",
		"UID=${localEnv:UID}",
		"--build-arg",
		"GID=${localEnv:GID}"
	],
	"postCreateCommand": "echo 'Dev container ready'",
	"customizations": {
		"vscode": {
			"extensions": [
				"Shopify.ruby-lsp",
				"misogi.ruby-rubocop",
				"rebornix.ruby",
				"aki77.html-erb",
				"anthropic.claude-code",
				"connorshea.vscode-ruby-test-adapter",
				"hbenl.vscode-test-explorer",
				"ms-vscode.test-adapter-converter",
				"ms-azuretools.vscode-docker"
			]
		}
	}
}